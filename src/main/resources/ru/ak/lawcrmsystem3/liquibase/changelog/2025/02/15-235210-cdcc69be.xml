<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="LawCrmSystem3">
        <addColumn tableName="CLIENT">
            <column name="ADDRESS" type="VARCHAR(255)"/>
            <column name="CLIENT_CATEGORY" type="VARCHAR(255)"/>
            <column name="CLIENT_STATUS" type="VARCHAR(255)"/>
            <column name="INTERACTIONS_HISTORY" type="VARCHAR(255)"/>
            <column name="NAME/TITLE" type="VARCHAR(255)"/>
            <column name="OTHER_INFO" type="VARCHAR(2500)"/>
            <column name="PHONE_NUMBER" type="VARCHAR(255)"/>
        </addColumn>
    </changeSet>
    <changeSet id="2" author="LawCrmSystem3">
        <addColumn tableName="DEAL_PARTICIPANT">
            <column name="ADDRESS" type="VARCHAR(2500)"/>
            <column name="OTHER_INFO" type="VARCHAR(5000)"/>
            <column name="TITLE/NAME" type="VARCHAR(1000)"/>
            <column name="UNIQUE_NUMBER" type="INT"/>
        </addColumn>
    </changeSet>
    <changeSet id="3" author="LawCrmSystem3">
        <addColumn tableName="TASK_">
            <column name="DEADLINE" type="${offsetDateTime.type}"/>
            <column name="IS_COMPLETED" type="BOOLEAN"/>
            <column name="TASK_PRIORITY" type="VARCHAR(255)"/>
            <column name="TASK_TITLE" type="CLOB"/>
        </addColumn>
    </changeSet>
    <changeSet id="4" author="LawCrmSystem3">
        <addColumn tableName="DEAL">
            <column name="DEAL_NUMBER" type="VARCHAR(255)"/>
            <column name="DEAL_STATUS" type="VARCHAR(255)"/>
            <column name="DESCRIPTION" type="VARCHAR(2500)"/>
            <column name="FINISHED_AT" type="${offsetDateTime.type}"/>
            <column name="STARTED_AT" type="${offsetDateTime.type}"/>
            <column name="TITLE" type="VARCHAR(255)"/>
        </addColumn>
    </changeSet>
    <changeSet id="5" author="LawCrmSystem3">
        <addColumn tableName="DOCUMENT">
            <column name="FILE_" type="${byte[].type}"/>
            <column name="TITLE" type="VARCHAR(255)"/>
        </addColumn>
    </changeSet>
    <changeSet id="6" author="LawCrmSystem3">
        <dropColumn columnName="ЗАВЕРШЕНО" tableName="deal"/>

        <dropColumn columnName="НАЗВАНИЕ" tableName="deal"/>

        <dropColumn columnName="НАЧАТО" tableName="deal"/>

        <dropColumn columnName="НОМЕР_ДЕЛА" tableName="deal"/>

        <dropColumn columnName="ОПИСАНИЕ" tableName="deal"/>

        <dropColumn columnName="ТЕКУЩИЙ_СТАТУС_ДЕЛА" tableName="deal"/>
    </changeSet>
    <changeSet id="7" author="LawCrmSystem3">
        <dropColumn columnName="ЗАВЕРШЕНО" tableName="task_"/>

        <dropColumn columnName="ЗАДАНИЕ" tableName="task_"/>

        <dropColumn columnName="СРОКИ_ВЫПОЛНЕНИЯ" tableName="task_"/>

        <dropColumn columnName="УРОВЕНЬ_СРОЧНОСТИ" tableName="task_"/>
    </changeSet>
</databaseChangeLog>