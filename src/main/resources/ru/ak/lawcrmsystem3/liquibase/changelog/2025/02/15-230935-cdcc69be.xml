<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="LawCrmSystem3">
        <createTable tableName="CLIENT">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_CLIENT"/>
            </column>
            <column name="ИМЯ/НАИМЕНОВАНИЕ" type="VARCHAR(255)"/>
            <column name="ИСТОРИЯ_ВЗАИМОДЕЙСТВИЙ" type="VARCHAR(2500)"/>
            <column name="АДРЕС" type="VARCHAR(255)"/>
            <column name="EMAIL" type="VARCHAR(255)"/>
            <column name="НОМЕР_ТЕЛЕФОНА" type="VARCHAR(255)"/>
            <column name="ПРОЧАЯ_ИНФОРМАЦИЯ" type="VARCHAR(1500)"/>
            <column name="VERSION" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="CREATED_BY" type="VARCHAR(255)"/>
            <column name="CREATED_DATE" type="${offsetDateTime.type}"/>
            <column name="LAST_MODIFIED_BY" type="VARCHAR(255)"/>
            <column name="LAST_MODIFIED_DATE" type="${offsetDateTime.type}"/>
            <column name="DELETED_BY" type="VARCHAR(255)"/>
            <column name="DELETED_DATE" type="${offsetDateTime.type}"/>
            <column name="DEAL_ID" type="UUID"/>
            <column name="КАТЕГОРИЯ_КЛИЕНТА" type="VARCHAR(255)"/>
            <column name="СТАТУС_КЛИЕНТА" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="2" author="LawCrmSystem3">
        <createTable tableName="DEAL">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_DEAL"/>
            </column>
            <column name="НАЗВАНИЕ" type="VARCHAR(255)"/>
            <column name="НОМЕР_ДЕЛА" type="VARCHAR(255)"/>
            <column name="НАЧАТО" type="${offsetDateTime.type}"/>
            <column name="ЗАВЕРШЕНО" type="${offsetDateTime.type}"/>
            <column name="ОПИСАНИЕ" type="CLOB"/>
            <column name="ТЕКУЩИЙ_СТАТУС_ДЕЛА" type="VARCHAR(255)"/>
            <column name="VERSION" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="CREATED_BY" type="VARCHAR(255)"/>
            <column name="CREATED_DATE" type="${offsetDateTime.type}"/>
            <column name="LAST_MODIFIED_BY" type="VARCHAR(255)"/>
            <column name="LAST_MODIFIED_DATE" type="${offsetDateTime.type}"/>
            <column name="DELETED_BY" type="VARCHAR(255)"/>
            <column name="DELETED_DATE" type="${offsetDateTime.type}"/>
        </createTable>
    </changeSet>
    <changeSet id="3" author="LawCrmSystem3">
        <createTable tableName="DEAL_PARTICIPANT">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_DEAL_PARTICIPANT"/>
            </column>
            <column name="ИНН" type="INT"/>
            <column name="НАИМЕНОВАНИЕ/Ф.И.О." type="VARCHAR(1500)"/>
            <column name="АДРЕС" type="VARCHAR(255)"/>
            <column name="ПРОЧАЯ_ТНФОРМАЦИЯ" type="VARCHAR(2500)"/>
            <column name="VERSION" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="CREATED_BY" type="VARCHAR(255)"/>
            <column name="CREATED_DATE" type="${offsetDateTime.type}"/>
            <column name="LAST_MODIFIED_BY" type="VARCHAR(255)"/>
            <column name="LAST_MODIFIED_DATE" type="${offsetDateTime.type}"/>
            <column name="DELETED_BY" type="VARCHAR(255)"/>
            <column name="DELETED_DATE" type="${offsetDateTime.type}"/>
        </createTable>
    </changeSet>
    <changeSet id="4" author="LawCrmSystem3">
        <createTable tableName="DEAL_PARTICIPANT_DEAL_LINK">
            <column name="DEAL_ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_DEAL_PARTICIPANT_DEAL_LINK"/>
            </column>
            <column name="DEAL_PARTICIPANT_ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_DEAL_PARTICIPANT_DEAL_LINK"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="5" author="LawCrmSystem3">
        <createTable tableName="DEAL_USER_LINK">
            <column name="DEAL_ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_DEAL_USER_LINK"/>
            </column>
            <column name="USER_ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_DEAL_USER_LINK"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="6" author="LawCrmSystem3">
        <createTable tableName="DOCUMENT">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_DOCUMENT"/>
            </column>
            <column name="НАЗВАНИЕ" type="VARCHAR(1500)"/>
            <column name="ФАЙЛ_" type="${byte[].type}"/>
            <column name="VERSION" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="CREATED_BY" type="VARCHAR(255)"/>
            <column name="CREATED_DATE" type="${offsetDateTime.type}"/>
            <column name="LAST_MODIFIED_BY" type="VARCHAR(255)"/>
            <column name="LAST_MODIFIED_DATE" type="${offsetDateTime.type}"/>
            <column name="DELETED_BY" type="VARCHAR(255)"/>
            <column name="DELETED_DATE" type="${offsetDateTime.type}"/>
            <column name="DEAL_ID" type="UUID"/>
        </createTable>
    </changeSet>
    <changeSet id="7" author="LawCrmSystem3">
        <createTable tableName="TASK_">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_TASK_"/>
            </column>
            <column name="УРОВЕНЬ_СРОЧНОСТИ" type="VARCHAR(255)"/>
            <column name="ЗАДАНИЕ" type="CLOB"/>
            <column name="СРОКИ_ВЫПОЛНЕНИЯ" type="${offsetDateTime.type}"/>
            <column name="ЗАВЕРШЕНО" type="BOOLEAN"/>
            <column name="VERSION" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="CREATED_BY" type="VARCHAR(255)"/>
            <column name="CREATED_DATE" type="${offsetDateTime.type}"/>
            <column name="LAST_MODIFIED_BY" type="VARCHAR(255)"/>
            <column name="LAST_MODIFIED_DATE" type="${offsetDateTime.type}"/>
            <column name="DELETED_BY" type="VARCHAR(255)"/>
            <column name="DELETED_DATE" type="${offsetDateTime.type}"/>
        </createTable>
    </changeSet>
    <changeSet id="8" author="LawCrmSystem3">
        <createTable tableName="TASK_USER_LINK">
            <column name="TASK_ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_TASK_USER_LINK"/>
            </column>
            <column name="USER_ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_TASK_USER_LINK"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="9" author="LawCrmSystem3">
        <createIndex indexName="IDX_CLIENT_DEAL" tableName="CLIENT">
            <column name="DEAL_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="DEAL_ID" baseTableName="CLIENT" constraintName="FK_CLIENT_ON_DEAL"
                                 referencedColumnNames="ID" referencedTableName="DEAL"/>
    </changeSet>
    <changeSet id="10" author="LawCrmSystem3">
        <createIndex indexName="IDX_DOCUMENT_DEAL" tableName="DOCUMENT">
            <column name="DEAL_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="DEAL_ID" baseTableName="DOCUMENT" constraintName="FK_DOCUMENT_ON_DEAL"
                                 referencedColumnNames="ID" referencedTableName="DEAL"/>
    </changeSet>
    <changeSet id="11" author="LawCrmSystem3">
        <addForeignKeyConstraint baseColumnNames="DEAL_ID" baseTableName="DEAL_PARTICIPANT_DEAL_LINK"
                                 constraintName="FK_DEAPARDEA_ON_DEAL" referencedColumnNames="ID"
                                 referencedTableName="DEAL"/>
    </changeSet>
    <changeSet id="12" author="LawCrmSystem3">
        <addForeignKeyConstraint baseColumnNames="DEAL_PARTICIPANT_ID" baseTableName="DEAL_PARTICIPANT_DEAL_LINK"
                                 constraintName="FK_DEAPARDEA_ON_DEAL_PARTICIPANT" referencedColumnNames="ID"
                                 referencedTableName="DEAL_PARTICIPANT"/>
    </changeSet>
    <changeSet id="13" author="LawCrmSystem3">
        <addForeignKeyConstraint baseColumnNames="DEAL_ID" baseTableName="DEAL_USER_LINK"
                                 constraintName="FK_DEAUSE_ON_DEAL" referencedColumnNames="ID"
                                 referencedTableName="DEAL"/>
    </changeSet>
    <changeSet id="14" author="LawCrmSystem3">
        <addForeignKeyConstraint baseColumnNames="USER_ID" baseTableName="DEAL_USER_LINK"
                                 constraintName="FK_DEAUSE_ON_USER" referencedColumnNames="ID"
                                 referencedTableName="USER_"/>
    </changeSet>
    <changeSet id="15" author="LawCrmSystem3">
        <addForeignKeyConstraint baseColumnNames="TASK_ID" baseTableName="TASK_USER_LINK"
                                 constraintName="FK_TASUSE_ON_TASK" referencedColumnNames="ID"
                                 referencedTableName="TASK_"/>
    </changeSet>
    <changeSet id="16" author="LawCrmSystem3">
        <addForeignKeyConstraint baseColumnNames="USER_ID" baseTableName="TASK_USER_LINK"
                                 constraintName="FK_TASUSE_ON_USER" referencedColumnNames="ID"
                                 referencedTableName="USER_"/>
    </changeSet>
</databaseChangeLog>