<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://serviceRenderedListView.title"
      focusComponent="serviceRenderedsDataGrid">
    <data>
        <collection id="serviceRenderedsDc"
                    class="ru.ak.lawcrmsystem3.entity.ServiceRendered">
            <fetchPlan extends="_base">
                <property name="deal" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="serviceRenderedsDl" readOnly="true">
                <query>
                    <![CDATA[select e from ServiceRendered e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <genericFilter id="genericFilter"
                       dataLoader="serviceRenderedsDl">
            <properties include=".*"/>
        </genericFilter>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="createButton" action="serviceRenderedsDataGrid.create"/>
            <button id="editButton" action="serviceRenderedsDataGrid.edit"/>
            <button id="removeButton" action="serviceRenderedsDataGrid.remove"/>
            <simplePagination id="pagination" dataLoader="serviceRenderedsDl"/>
        </hbox>
        <dataGrid id="serviceRenderedsDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="serviceRenderedsDc"
                  columnReorderingAllowed="true">
            <actions>
                <action id="create" type="list_create"/>
                <action id="edit" type="list_edit"/>
                <action id="remove" type="list_remove"/>
            </actions>
            <columns resizable="true">
                <column property="deal"/>
                <column property="serviceName"/>
                <column property="description"/>
                <column property="serviceCost"/>
                <column property="quantity"/>
                <column property="paid"/>
                <column property="totalCost"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectButton" action="selectAction"/>
            <button id="discardButton" action="discardAction"/>
        </hbox>
    </layout>
</view>
