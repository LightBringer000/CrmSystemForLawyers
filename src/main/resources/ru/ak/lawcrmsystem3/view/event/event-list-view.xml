<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://eventListView.title"
      focusComponent="eventsDataGrid">
    <data>
        <collection id="eventsDc"
                    class="ru.ak.lawcrmsystem3.entity.Event">
            <fetchPlan extends="_base">
                <property name="user" fetchPlan="_base"/>
                <property name="deal" fetchPlan="_base"/>
                <property name="client" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="eventsDl" readOnly="true">
                <query>
                    <![CDATA[select e from Event e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <genericFilter id="genericFilter"
                       dataLoader="eventsDl">
            <properties include=".*"/>
        </genericFilter>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="createButton" action="eventsDataGrid.create"/>
            <button id="editButton" action="eventsDataGrid.edit"/>
            <button id="removeButton" action="eventsDataGrid.remove"/>
            <simplePagination id="pagination" dataLoader="eventsDl"/>
        </hbox>
        <dataGrid id="eventsDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="eventsDc"
                  columnReorderingAllowed="true">
            <actions>
                <action id="create" type="list_create"/>
                <action id="edit" type="list_edit"/>
                <action id="remove" type="list_remove"/>
            </actions>
            <columns resizable="true">
                <column property="eventTitle"/>
                <column property="startDate"/>
                <column property="endDate"/>
                <column property="user"/>
                <column property="deal.title"/>
                <column property="client.name"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectButton" action="selectAction"/>
            <button id="discardButton" action="discardAction"/>
        </hbox>
    </layout>
</view>
