<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://documentDetailView.title"
      focusComponent="form">
    <data>
        <instance id="documentDc"
                  class="ru.ak.lawcrmsystem3.entity.Document">
            <fetchPlan extends="_base">
                <property name="deal" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="documentDl"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="saveAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <layout>
        <formLayout id="form" dataContainer="documentDc">
            <responsiveSteps>
                <responsiveStep minWidth="0" columns="1"/>
                <responsiveStep minWidth="40em" columns="2"/>
            </responsiveSteps>
            <textField id="titleField" property="title"/>
            <fileStorageUploadField id="fileField" clearButtonVisible="true" fileNameVisible="true" property="file"/>
            <textField id="mimeTypeField" property="mimeType"/>
            <entityPicker id="dealField" property="deal">
                <actions>
                    <action id="entityLookupAction" type="entity_lookup"/>
                    <action id="entityClearAction" type="entity_clear"/>
                </actions>
            </entityPicker>
        </formLayout>
        <iframe id="documentViewerIframe"
                width="100%"
                height="600px"
                css="border: unset;"/> <hbox id="detailActions">
        <button id="saveAndCloseButton" action="saveAction"/>
        <button id="closeButton" action="closeAction"/>
        <button id="viewFileButton" text="Просмотреть/Скачать файл"/>
    </hbox>

    </layout>
</view>
