<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://emailEntityBrowseDetailView.title"
      focusComponent="form">
    <data>
        <instance id="emailEntityBrowseDc"
                  class="ru.ak.lawcrmsystem3.entity.EmailEntityBrowse">
            <fetchPlan extends="_base">
                <property name="servicesRendered" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="emailEntityBrowseDl" readOnly="true"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <layout>
        <formLayout id="form" dataContainer="emailEntityBrowseDc">
            <responsiveSteps>
                <responsiveStep minWidth="0" columns="1"/>
                <responsiveStep minWidth="40em" columns="2"/>
            </responsiveSteps>
            <textField id="captureField" property="capture"/>
            <textArea id="contentField" height="9.5em" property="content"/>
            <fileUploadField id="attachedFileField" clearButtonVisible="true" fileNameVisible="true"
                             property="attachedFile"/>
            <textField id="clientEmailField" property="clientEmail"/>
        </formLayout>
        <hbox id="detailActions">
            <button id="closeButton" action="closeAction"/>
        </hbox>
    </layout>
</view>