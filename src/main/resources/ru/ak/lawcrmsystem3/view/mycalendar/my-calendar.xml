<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view" xmlns:calendar="http://jmix.io/schema/fullcalendar/ui"
      title="msg://myCalendar.title">
    <data>
        <collection id="eventsDc" class="ru.ak.lawcrmsystem3.entity.Event">
            <!--   -->
            <fetchPlan extends="_base">
                <property name="user" fetchPlan="_base"/>
            </fetchPlan>
            <!--   -->
            <loader id="eventsDl" readOnly="true">
                <query>
                    <![CDATA[select e from Event e where e.user = :user]]>
                </query>
            </loader>
            <fetchPlan extends="_base"/>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <layout>
        <comboBox id="displayModesBox" width="15em" overlayWidth="15em"/>
        <calendar:calendar id="calendar"
                           selectionEnabled="true"
                           eventTextColor="#5CCCCC"
                           eventBorderColor="#679B00"
                           eventBackgroundColor="#006363"
                           height="100%"
                           width="100%"
                           minHeight="30em"
                           minWidth="30em">
            <calendar:dataProviders>
                <calendar:containerDataProvider
                                                id="dataProvider"
                                                dataContainer="eventsDc"
                                                title="eventTitle"
                                                allDay="allDay"
                                                startDateTime="startDate"
                                                endDateTime="endDate"/>
            </calendar:dataProviders>
        </calendar:calendar>
    </layout>
</view>